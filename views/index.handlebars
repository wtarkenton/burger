<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
          <h1>EAT DA BURGER!</h1>
        </div>
        <div class="col-xs-6 text-center" class="task">
            <div class="row">
              {{#each burger}}
                {{#unless this.devoured}}
              <div class="col-xs-9 text-ccenter">
                <pre>{{this.id}}. {{this.burger_name}}</pre>
              </div>
            <div class ="col-xs-3 text center">
              <form method="POST" action="/{{this.id}}?_method=PUT"
              class="button-size">
                <input type="hidden" name="burger_id" type="text"
                value= "true">
                <br>
                <button type="submit" class="btn btn-default">
                DEVOUR IT!</button>
              </form>
            </div>
            {{/unless}}
            {{/each}}
            </div>
          </div>

          <div class="col-xs-6 text-center" class="task">
            {{#each burger}}
              {{#if this.devoured}}
              <p>{{this.id}}. {{this.burger_name}}</p>
              {{/if}}
            {{/each}}
        </div>
      </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
        <form action="/create" method="POST">
            <input type="text" name="burger_name" class="form-control"
            value=" " id="enter_text">
            <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
        </form>
          <p>Enter in a burger you would like to eat!</p>
        </div>
      </div>
  </div>
